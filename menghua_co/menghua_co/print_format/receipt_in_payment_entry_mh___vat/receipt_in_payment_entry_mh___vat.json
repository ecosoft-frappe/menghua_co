 "doctype": "Print Format",
 "font_size": 14,
 "hide_if_not_default": 0,
 "html": "<style>\n    @font-face {\n        font-family: \"TH Sarabun New\";\n        src: url(\"{{ frappe.utils.get_url() }}/assets/menghua_co/fonts/th-sarabun-new/THSarabunNew.ttf\") format(\"truetype\");\n    }\n</style>\n\n{% set company = frappe.db.get_value(\n    \"Company\",\n    {\"name\": doc.company},\n    [\"company_logo\", \"company_name\", \"tax_id\"],\n    as_dict=True) %}\n{% set parent_company_address = frappe.db.get_all(\n    \"Dynamic Link\",\n    {\"link_doctype\": \"Company\", \"link_name\": company.company_name},\n    pluck=\"parent\") %}\n{% set company_address = frappe.db.get_value(\n    \"Address\",\n    {\"name\": (\"in\", parent_company_address), \"address_type\": \"Permanent\"},\n    [\"address_line1\", \"address_line2\", \"city\", \"county\", \"state\", \"pincode\", \"phone\"],\n    as_dict=True) %}\n{% set customer = frappe.db.get_value(\n    \"Customer\",\n    {\"name\": doc.party},\n    [\"customer_name\", \"tax_id\"],\n    as_dict=True) %}\n{% set links = frappe.get_all(\n    \"Dynamic Link\",\n    filters={\"link_doctype\": \"Customer\", \"link_name\": doc.party, \"parenttype\": \"Address\"},\n    fields=[\"parent\"]\n    ) %}\n{% set customer_address = frappe.db.get_value(\n    \"Address\",\n    {\"name\": links[0].parent},\n    [\"address_line1\", \"address_line2\", \"city\", \"county\", \"state\", \"pincode\", \"phone\", \"contact\"],\n    as_dict=True) %}\n\n{% set is_valid = True %}\n{% set number_of_copies = 2 %}\n\n<!-- Check for VAT in Sales Invoices -->\n{% set payment_references = frappe.db.get_all('Payment Entry Reference', {'parent': doc.name}, 'reference_name, reference_doctype') %}\n{% set have_vat = namespace(n=1) %}\n\n{% for ref in payment_references %}\n    {% if ref.reference_doctype == 'Sales Invoice' and have_vat.n == 1 %}\n        {% set sale_tax = frappe.db.get_all('Sales Taxes and Charges', {'parent': ref.reference_name}, 'name') %}\n        {% if ref.reference_name[:2] == \"NV\" or (ref.reference_name[:3] != \"INV\" and sale_tax | length == 0) %}\n            {% set have_vat.n = 0 %}\n        {% endif %}\n    {% endif %}\n{% endfor %}\n\n<!-- Show this form only if VAT is present -->\n{% if have_vat.n == 0 %}\n    {% set is_valid = False %}\n    <div id=\"header-html\" class=\"hidden-pdf\"></div>\n    <h1 style=\"color: red;\">\u0e40\u0e2d\u0e01\u0e2a\u0e32\u0e23 {{ doc.name or \"-\" }} \u0e44\u0e21\u0e48\u0e21\u0e35 Vat \u0e01\u0e23\u0e38\u0e13\u0e32\u0e40\u0e25\u0e37\u0e2d\u0e01\u0e1f\u0e2d\u0e23\u0e4c\u0e21 Receipt in Payment Entry MH - NO_VAT</h1>\n    <div id=\"footer-html\" class=\"hidden-pdf\"></div>\n{% endif %}\n\n{% if is_valid %}\n{% for copy in range(number_of_copies) %}\n    <div class=\"{{ 'page-break' if copy < number_of_copies - 1 else '' }}\">\n        <div id=\"header-html\" class=\"hidden-pdf\">\n            <script>\n                // This script can used with only 1 original + 1 copy, If you have more copy page. please validate this function again\n                window.onload = function() {\n                var vars = {};\n                var x = document.location.search.substring(1).split(\"&\");\n                for (var i in x) {\n                    var z = x[i].split(\"=\", 2);\n                    vars[z[0]] = unescape(z[1]);\n                }\n                if (vars[\"page\"] <= vars[\"topage\"] / {{ number_of_copies }}) {\n                    document.querySelectorAll(\".original\")[0].style.display = \"block\";\n                    document.querySelectorAll(\".copy\")[0].style.display = \"none\";\n                } else {\n                    document.querySelectorAll(\".original\")[0].style.display = \"none\";\n                    document.querySelectorAll(\".copy\")[0].style.display = \"block\";\n                }\n            };\n            </script>\n            <br>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-7\">\n                    <div class=\"row section-break\">\n                        <div class=\"col-xs-12\">\n                            <img class=\"logo\" src=\"{{ company.company_logo }}\" alt=\"Company Logo\"/>\n                        </div>\n                    </div>\n                    <br>\n                    <div class=\"row section-break\">\n                        <div class=\"col-xs-12\">\n                            <p>\n                                {{ company.company_name or \"-\" }}\n                            </p>\n                            <p>\u0e17\u0e35\u0e48\u0e2d\u0e22\u0e39\u0e48\n                                {% if company_address %}\n                                    {{ company_address.address_line1 or \"\"}}\n                                    {{ company_address.address_line2 or \"\"}}\n                                    {{ company_address.city or \"\"}}\n                                    {{ company_address.county or \"\"}}\n                                    {{ company_address.state or \"\"}}\n                                    {{ company_address.pincode or \"\"}}\n                                {% else %}\n                                    -\n                                {% endif %}\n                            </p>\n                            <p>\n                                \u0e40\u0e25\u0e02\u0e1b\u0e23\u0e30\u0e08\u0e33\u0e15\u0e31\u0e27\u0e1c\u0e39\u0e49\u0e40\u0e2a\u0e35\u0e22\u0e20\u0e32\u0e29\u0e35 {{ company.tax_id or \"-\" }}\n                            </p>\n                            <p>\n                                \u0e42\u0e17\u0e23. {{ company_address.phone or \"-\" }}\n                            </p>\n                        </div>\n                    </div>\n                </div>\n                <div class=\"col-xs-5 inv-detail\">\n                    <div class=\"row section-break\">\n                        <div class=\"col-xs-12 text-center\">\n                            <h1>\n                                <strong class=\"text-color\">\n                                    \u0e43\u0e1a\u0e40\u0e2a\u0e23\u0e47\u0e08\u0e23\u0e31\u0e1a\u0e40\u0e07\u0e34\u0e19\n                                </strong>\n                            </h1>\n                            <p>\n                                <strong>\n                                    <span class=\"original text-color\">\n                                        \u0e15\u0e49\u0e19\u0e09\u0e1a\u0e31\u0e1a\n                                    </span>\n                                    <span class=\"copy text-color\">\n                                        \u0e2a\u0e33\u0e40\u0e19\u0e32\n                                    </span>\n                                </strong>\n                            </p>\n                        </div>\n                    </div>\n                    <div class=\"row section-break\">\n                        <div class=\"col-xs-12\">\n                            <div class=\"with-border\"></div>\n                        </div>\n                    </div>\n                    <div class=\"row section-break\">\n                        <div class=\"col-xs-3 text-color\">\n                            \u0e40\u0e25\u0e02\u0e17\u0e35\u0e48\n                        </div>\n                        <div class=\"col-xs-9\">\n                            {{ doc.name or \"-\" }}\n                        </div>\n                    </div>\n                    <div class=\"row section-break\">\n                        <div class=\"col-xs-3 text-color\">\n                            \u0e27\u0e31\u0e19\u0e17\u0e35\u0e48\n                        </div>\n                        <div class=\"col-xs-9\">\n                            {{ doc.posting_date and frappe.utils.getdate(doc.posting_date).strftime(\"%d/%m/%Y\") or \"-\" }}\n                        </div>\n                    </div>\n                    <div class=\"row section-break\">\n                        <div class=\"col-xs-12\">\n                            <div class=\"with-border\"></div>\n                        </div>\n                    </div>\n                </div>\n            </div>\n            <br>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-6\">\n                    <p class=\"text-color\">\n                        \u0e25\u0e39\u0e01\u0e04\u0e49\u0e32\n                    </p>\n                    <p>\n                        {{ customer.customer_name or \"-\" }}\n                    </p>\n                    <p>\u0e17\u0e35\u0e48\u0e2d\u0e22\u0e39\u0e48\n                        {% if customer_address %}\n                            {{ customer_address.address_line1 or ''}}\n                            {{ customer_address.address_line2 or ''}}\n                            {{ customer_address.city or ''}}\n                            {{ customer_address.county or ''}}\n                            {{ customer_address.state or ''}}\n                            {{ customer_address.pincode or ''}}\n                        {% else %}\n                            -\n                        {% endif %}\n                    </p>\n                    <p>\n                        \u0e40\u0e25\u0e02\u0e1b\u0e23\u0e30\u0e08\u0e33\u0e15\u0e31\u0e27\u0e1c\u0e39\u0e49\u0e40\u0e2a\u0e35\u0e22\u0e20\u0e32\u0e29\u0e35 {{ customer.tax_id or \"-\" }}\n                    </p>\n                    <p>\n                        \u0e15\u0e34\u0e14\u0e15\u0e48\u0e2d {{ customer_address.contact or \"-&nbsp;&nbsp;&nbsp;\" }} \u0e42\u0e17\u0e23 {{ customer_address.phone or \"-\" }}\n                    </p>\n                </div>\n            </div>\n        </div>\n                <div id=\"detail-html\">\n            <table>\n                <thead>\n                    <tr>\n                        <th class=\"text-center head-col col-1\">#</th>\n                        <th class=\"text-center head-col col-3\">\u0e40\u0e25\u0e02\u0e17\u0e35\u0e48\u0e43\u0e1a\u0e41\u0e08\u0e49\u0e07\u0e2b\u0e19\u0e35\u0e49</th>\n                        <th class=\"text-right head-col col-2\">\u0e22\u0e2d\u0e14\u0e40\u0e07\u0e34\u0e19\u0e17\u0e31\u0e49\u0e07\u0e2b\u0e21\u0e14</th>\n                    </tr>\n                </thead>\n                <tbody>\n                    {% for item in doc.references %}\n                        <tr>\n                            <td class=\"text-center with-border\">\n                                {{ item.idx }}\n                            </td>\n                            <td class=\"with-border\">\n                                {{ item.reference_name }}\n                            </td>\n                            <td class=\"text-right with-border\">\n                                {{ \"{:,.2f}\".format(item.total_amount|float) }}\n                            </td>\n                        </tr>\n                    {% endfor %}\n                </tbody>\n            </table>\n            <br>\n            <table class=\"summary\">\n                <tr>\n                    <td colspan=\"3\">\n                        {{ amount_in_bahttext(doc.references | sum(attribute='total_amount')) }}\n                    </td>\n                    <td colspan=\"2\" class=\"text-color text-right\">\n                        \u0e08\u0e33\u0e19\u0e27\u0e19\u0e40\u0e07\u0e34\u0e19\u0e23\u0e27\u0e21\u0e17\u0e31\u0e49\u0e07\u0e2a\u0e34\u0e49\u0e19\n                    </td>\n                    <td colspan=\"2\" class=\"text-right\">\n                        {{ \"{:,.2f}\".format(doc.references | sum(attribute='total_amount')|float) }}\n                        {{ \"THB\" and \"\u0e1a\u0e32\u0e17\" }}\n                    </td>\n                </tr>\n            </table>\n            <p>\u0e27\u0e34\u0e18\u0e35\u0e01\u0e32\u0e23\u0e0a\u0e33\u0e23\u0e30\u0e40\u0e07\u0e34\u0e19</p>\n                {% set mode_of_payment_doc = frappe.get_doc('Mode of Payment', doc.mode_of_payment) %}\n                {% set is_cash = mode_of_payment_doc.type == 'Cash' %}\n                {% set is_cheque = 'Cheque' in doc.mode_of_payment or '\u0e40\u0e0a\u0e47\u0e04' in doc.mode_of_payment %}\n                {% set is_bank = mode_of_payment_doc.type == 'Bank' %}\n                {% set bank_name = frappe.db.get_value('Bank Account', doc.bank_account, 'bank') or ' - ' %}\n                {% set posting_date = frappe.utils.getdate(doc.posting_date).strftime('%d/%m/%Y') if doc.posting_date else ' - ' %}\n                {% set paid_amount = \"{:,.2f}\".format(doc.paid_amount|float) if doc.paid_amount else '0.00' %}\n                \n                <p>\n                    <span class=\"checkmark\">&#10003;</span>\n                    {% if is_cash %}\n                        \u0e40\u0e07\u0e34\u0e19\u0e2a\u0e14\n                    {% elif is_cheque %}\n                        \u0e40\u0e0a\u0e47\u0e04\n                    {% else %}\n                        \u0e42\u0e2d\u0e19\u0e40\u0e07\u0e34\u0e19\n                    {% endif %}\n                    {% if not is_cash %}\n                        \u0e18\u0e19\u0e32\u0e04\u0e32\u0e23\n                        <span class=\"bank-name\">{{ bank_name }}</span>\n                    {% endif %}\n                    {% if is_cheque %}\n                        \u0e40\u0e0a\u0e47\u0e04\u0e40\u0e25\u0e02\u0e17\u0e35\u0e48\n                        <span class=\"reference-number\">{{ doc.reference_no | default(' - ') }}</span>\n                    {% elif not is_cash %}\n                        \u0e40\u0e25\u0e02\u0e17\u0e35\u0e48\n                        <span class=\"reference-number\">\n                            {{ frappe.db.get_value('Bank Account', doc.bank_account, 'bank_account_no') or ' - ' }}\n                        </span>\n                    {% endif %}\n                    \u0e27\u0e31\u0e19\u0e17\u0e35\u0e48\n                    <span class=\"date\">{{ posting_date }}</span>\n                    \u0e08\u0e33\u0e19\u0e27\u0e19\u0e40\u0e07\u0e34\u0e19\n                    <span class=\"amount\">{{ paid_amount }}</span>\u0e1a\u0e32\u0e17\n                </p>\n        </div>\n        <br><br>\n        <table class=\"summary\">\n                <tr>\n                    <td colspan=\"3\">\n                        {{ amount_in_bahttext(doc.total_allocated_amount) }}\n                    </td>\n                    <td colspan=\"2\" class=\"text-color text-right\">\n                        \u0e22\u0e2d\u0e14\u0e40\u0e07\u0e34\u0e19\u0e17\u0e35\u0e48\u0e0a\u0e33\u0e23\u0e30\u0e17\u0e31\u0e49\u0e07\u0e2a\u0e34\u0e49\u0e19\n                    </td>\n                    <td colspan=\"2\" class=\"text-right\">\n                        {{ \"{:,.2f}\".format(doc.total_allocated_amount|float) }}\n                        {{ \"THB\" and \"\u0e1a\u0e32\u0e17\" }}\n                    </td>\n                </tr>\n        </table>\n        <br>\n        <p>\u0e01\u0e32\u0e23\u0e0a\u0e33\u0e23\u0e30\u0e40\u0e07\u0e34\u0e19\u0e08\u0e30\u0e40\u0e2a\u0e23\u0e47\u0e08\u0e2a\u0e34\u0e49\u0e19\u0e40\u0e21\u0e37\u0e48\u0e2d\u0e1a\u0e23\u0e34\u0e29\u0e31\u0e17\u0e44\u0e14\u0e49\u0e23\u0e31\u0e1a\u0e40\u0e07\u0e34\u0e19\u0e40\u0e23\u0e35\u0e22\u0e1a\u0e23\u0e49\u0e2d\u0e22</p>\n        <div class=\"row section-break note\">\n            <div class=\"col-xs-12\">\n                <p class=\"text-color\">\n                    \u0e2b\u0e21\u0e32\u0e22\u0e40\u0e2b\u0e15\u0e38\n                </p>\n                <div>\n                    {{ doc.custom_terms_and_conditions_details or \"-\" }}\n                </div>\n            </div>\n        </div>\n        <div id=\"footer-html\" class=\"visible-pdf\">\n            <script>\n                // This script can used with only 1 original + 1 copy, If you have more copy page. please validate this function again\n                window.onload = function() {\n                    var vars = {};\n                    var x = document.location.search.substring(1).split(\"&\");\n                    for (var i in x) {\n                        var z = x[i].split(\"=\", 2);\n                        vars[z[0]] = unescape(z[1]);\n                    }\n                    if (vars[\"page\"] == vars[\"topage\"] / {{ number_of_copies }} || vars[\"page\"] == vars[\"topage\"]) {\n                        document.querySelectorAll(\".footer\")[0].style.visibility = \"visible\";\n                    }\n                    var page_number = vars[\"page\"] - (vars[\"topage\"] / {{ number_of_copies }})\n                    if (page_number <= 0) {\n                        page_number = vars[\"page\"]\n                    }\n                    document.querySelectorAll(\".page-number\")[0].innerHTML = \"\u0e2b\u0e19\u0e49\u0e32\u0e17\u0e35\u0e48 \" + page_number + \"/\" + vars[\"topage\"]/{{ number_of_copies }};\n                };\n            </script>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-5\">\n                    <p style=\"margin: 0;\">\u0e43\u0e19\u0e19\u0e32\u0e21 {{ doc.party_name }}</p>\n                    <br><br>\n                    <div class=\"row section-break\">\n                        <div class=\"col-xs-6 text-center\">\n                            <div class=\"inline-footer\">\u0e1c\u0e39\u0e49\u0e08\u0e48\u0e32\u0e22\u0e40\u0e07\u0e34\u0e19</div>\n                        </div>\n                        <div class=\"col-xs-6 text-center\">\n                            <div class=\"inline-footer\">\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48</div>\n                        </div>\n                    </div>\n                </div>\n                <div class=\"col-xs-2 text-center\">\n                    <img src=\"/assets/menghua_co/images/menghua-book.png\" alt=\"Menghua Book Logo\" class=\"menghua-book-logo\"/>\n                </div>\n                <div class=\"col-xs-5\">\n                    <p style=\"margin: 0; text-align: right;\"> \u0e43\u0e19\u0e19\u0e32\u0e21 {{ company.company_name }}</p>\n                    <br><br>\n                    <div class=\"row section-break\">\n                        <div class=\"col-xs-6 text-center\">\n                            <div class=\"inline-footer\">\u0e1c\u0e39\u0e49\u0e23\u0e31\u0e1a\u0e40\u0e07\u0e34\u0e19</div>\n                        </div>\n                        <div class=\"col-xs-6 text-center\">\n                            <div class=\"inline-footer\">\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48</div>\n                        </div>\n                    </div>\n                </div>\n            </div>\n            <p class=\"page-number\"></p>\n        </div>\n    </div>\n{% endfor %}\n{% endif %}",
